				<td id="tohen"> {{trip.m_creation_time.strftime('%Y-%m-%d')}} </td>
				<td id="tohen"> {{trip.m_description}} </td>
<!-- if the user is an admin, he can delete records from this page.
	we save the id of the trip and the key of the parent in order to delete this trip in the python file.
	else, the delete button will not be desplayed. -->
				<td id="tohen"> {% if user_or_admin=='an admin' %}
					<form action="/deletetrip" method="post">
					<input type="submit" value="Delete" name="record_to_delete" class="myButton"> </input>
					<input type="hidden" value={{trip.key().id()}} name="trip_to_delete"></input>
					<input type="hidden" value={{trip.parent_key()}} name="parent_of_trip"></input>
					</form>
					{% endif %}
				</td>
			</tr>
			{% endfor %}
        </table>