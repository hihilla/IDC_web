<!-- we use query to extract all uploaded trips (from the get method).
	we use For loop inside the Jinja2 template to go over the trips and display their data. -->
			{% for trip in searched_trips %}
			<tr id="trips_table">
				<td id="tohen"> {% if user_or_admin=='an admin' %}
					<form action="/viewuser" method="post">
					<input type="submit" value="{{trip.parent().m_nickname}}" name="Nickname" class="userbutton"> </input>
					<input type="hidden" value={{trip.parent_key()}} name="parent_of_trip"></input>
					</form>
					{% endif %}
				</td>
